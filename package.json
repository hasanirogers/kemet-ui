{
  "name": "kemet-ui",
  "version": "2.0.0",
  "description": "A flexible blueprint system for UIs.",
  "main": "index.js",
  "watch": {
    "build": "src/**/*.*",
    "analyze": "src/components/**/kemet-*.*"
  },
  "scripts": {
    "analyze": "custom-elements-manifest analyze --litelement --globs \"src/components/**/kemet-*.*\"",
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass src/styles/kemet.components.scss:dist/styles/kemet.components.css src/styles/kemet.core.scss:dist/styles/kemet.core.css src/styles/kemet.base.scss:dist/styles/kemet.base.css && postcss dist/styles/**/*.css -u autoprefixer --dir dist/styles",
    "build:js": "rollup -c config/rollup.mjs",
    "deploy": "build-storybook && node deploy.js",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:stylelint": "npx stylelint --fix 'src/styles/**/*.scss'",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:stylelint": "npx stylelint 'src/styles/**/*.scss'",
    "prepare": "husky install",
    "prepublish": "rimraf dist && npm run build",
    "start": "concurrently npm:storybook npm:watch",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "web-test-runner --coverage --config=config/web-test-runner.mjs",
    "test:watch": "web-test-runner --config=config/web-test-runner.mjs --watch",
    "watch": "npm-watch"
  },
  "author": "Hasani Rogers <dev@hasanirogers.me>",
  "license": "MIT",
  "keywords": [
    "web components",
    "custom elements",
    "blueprint system"
  ],
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "browserslist": [
    "last 2 versions",
    "iOS >= 8"
  ],
  "dependencies": {
    "@popperjs/core": "^2.11.7",
    "lit": "^2.6.1",
    "lit-html": "^2.6.1",
    "mobile-drag-drop": "2.2.0",
    "ts-dedent": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/plugin-transform-typescript": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@custom-elements-manifest/analyzer": "^0.6.9",
    "@open-wc/eslint-config": "^9.2.2",
    "@open-wc/testing": "^3.1.7",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^6.5.16",
    "@storybook/web-components": "^6.5.16",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.1",
    "@whitespace/storybook-addon-html": "^5.1.1",
    "babel-loader": "^9.1.2",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.4",
    "react-syntax-highlighter": "^15.5.0",
    "rimraf": "^4.3.0",
    "rollup": "^3.18.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.58.3",
    "sass-loader": "^13.2.0",
    "ssh2-sftp-client": "^8.1.0",
    "style-loader": "^3.3.1",
    "stylelint": "^15.2.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^30.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hasanirogers/kemet-ui.git"
  },
  "bugs": {
    "url": "https://github.com/hasanirogers/kemet-ui/issues"
  },
  "homepage": "http://kemet.dev",
  "customElements": "custom-elements.json"
}
