{
  "name": "kemet-ui",
  "version": "0.0.1",
  "description": "A flexible designless system for UIs.",
  "main": "dist/kemet.components.js",
  "watch": {
    "build": "src/**/*.*"
  },
  "scripts": {
    "start": "web-dev-server",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "watch": "npm-watch",
    "build": "npm run css:build && npm run js:build",
    "css:build": "sass src/styles/kemet.components.scss:dist/styles/kemet.components.css src/styles/kemet.core.scss:dist/styles/kemet.core.css",
    "js:build": "rollup -c config/rollup.js",
    "storybook": "start-storybook -s ./ -p 6006",
    "storybook:build": "build-storybook",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:stylelint": "npx stylelint 'src/styles/**/*.scss'",
    "format:stylelint": "npx stylelint --fix 'src/styles/**/*.scss'",
    "prepare": "husky install",
    "prepublish": "rimraf dist && npm run build"
  },
  "author": "Hasani Rogers <hasani.rogers@gmail.com>",
  "license": "MIT",
  "keywords": [
    "web components",
    "custom elements",
    "design system",
    "designless"
  ],
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config"
    ],
    "rules": {
      "no-param-reassign": "off",
      "no-use-before-define": "off",
      "no-multi-assign": "off",
      "import/no-extraneous-dependencies": "off"
    },
    "ignorePatterns": [
      "dist/**/*.js"
    ]
  },
  "dependencies": {
    "lit": "^2.0.0-rc.2",
    "ts-dedent": "^2.1.1"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/web-components": "^6.2.9",
    "@web/dev-server": "^0.1.17",
    "@web/test-runner": "^0.13.4",
    "husky": "^6.0.0",
    "npm-watch": "^0.9.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.13",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hasanirogers/kemet-ui.git"
  },
  "bugs": {
    "url": "https://github.com/hasanirogers/kemet-ui/issues"
  },
  "homepage": "http://kemet.dev",
  "components": [
    "src/components/kemet-accordion/kemet-accordion.js",
    "src/components/kemet-carousel/kemet-carousel.js",
    "src/components/kemet-carousel/kemet-carousel-link.js",
    "src/components/kemet-carousel/kemet-carousel-next.js",
    "src/components/kemet-carousel/kemet-carousel-prev.js",
    "src/components/kemet-carousel/kemet-carousel-slide.js",
    "src/components/kemet-carousel/kemet-carousel.js",
    "src/components/kemet-draggable/kemet-draggable.js",
    "src/components/kemet-drawer/kemet-drawer.js",
    "src/components/kemet-flipcard/kemet-flipcard.js",
    "src/components/kemet-flipcard/kemet-flipcard-trigger.js",
    "src/components/kemet-carousel/kemet-carousel.js",
    "src/components/kemet-modal/kemet-modal.js",
    "src/components/kemet-modal/kemet-modal-close.js",
    "src/components/kemet-carousel/kemet-carousel.js",
    "src/components/kemet-popover/kemet-popover.js",
    "src/components/kemet-popover/kemet-popover-close.js",
    "src/components/kemet-ratio/kemet-ratio.js",
    "src/components/kemet-rotator/kemet-rotator.js",
    "src/components/kemet-scroll-link/kemet-scroll-link.js",
    "src/components/kemet-scroll-nav/kemet-scroll-nav.js",
    "src/components/kemet-scroll-snap/kemet-scroll-snap.js",
    "src/components/kemet-scroll-snap/kemet-scroll-snap-paginator.js",
    "src/components/kemet-scroll-snap/kemet-scroll-snap-slide.js",
    "src/components/kemet-tabs/kemet-tabs.js",
    "src/components/kemet-tabs/kemet-tab-panel.js",
    "src/components/kemet-tabs/kemet-tab.js"
  ]
}
