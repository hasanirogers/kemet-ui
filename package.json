{
  "name": "kemet-ui",
  "version": "0.2.0",
  "description": "A flexible and designless blueprint system for UIs.",
  "main": "index.js",
  "watch": {
    "build": "src/**/*.*",
    "analyze": "src/components/**/*.js"
  },
  "scripts": {
    "analyze": "custom-elements-manifest analyze --litelement --globs \"src/components/kemet-*/kemet-*.js\"",
    "build": "npm run css:build && npm run js:build",
    "css:build": "sass src/styles/kemet.components.scss:dist/styles/kemet.components.css src/styles/kemet.core.scss:dist/styles/kemet.core.css && postcss dist/styles/**/*.css -u autoprefixer --dir dist/styles",
    "deploy": "build-storybook && node deploy.js",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "format:stylelint": "npx stylelint --fix 'src/styles/**/*.scss'",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "lint:stylelint": "npx stylelint 'src/styles/**/*.scss'",
    "prepare": "husky install",
    "prepublish": "rimraf dist && npm run build",
    "js:build": "rollup -c config/rollup.js",
    "start": "web-dev-server",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "watch": "npm-watch"
  },
  "author": "Hasani Rogers <hasani.rogers@gmail.com>",
  "license": "MIT",
  "keywords": [
    "web components",
    "custom elements",
    "blueprint system",
    "designless"
  ],
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config"
    ],
    "rules": {
      "no-param-reassign": "off",
      "no-use-before-define": "off",
      "no-multi-assign": "off",
      "import/no-extraneous-dependencies": "off"
    },
    "ignorePatterns": [
      "dist/**/*.js"
    ]
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "iOS >= 8"
  ],
  "dependencies": {
    "lit": "^2.0.0-rc.2",
    "ts-dedent": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-react": "^7.14.5",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addons": "^6.4.22",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/theming": "^6.4.22",
    "@storybook/web-components": "^6.4.22",
    "@web/dev-server": "^0.1.17",
    "@web/test-runner": "^0.13.4",
    "babel-loader": "^8.2.2",
    "css-loader": "5.2.6",
    "dotenv": "^10.0.0",
    "husky": "^6.0.0",
    "npm-watch": "^0.9.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.13",
    "sass-loader": "10.1.1",
    "ssh2-sftp-client": "^6.0.1",
    "style-loader": "2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hasanirogers/kemet-ui.git"
  },
  "bugs": {
    "url": "https://github.com/hasanirogers/kemet-ui/issues"
  },
  "homepage": "http://kemet.dev",
  "customElements": "custom-elements.json"
}
