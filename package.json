{
  "name": "kemet-ui",
  "version": "3.1.0",
  "description": "A flexible blueprint system for UIs.",
  "main": "index.js",
  "watch": {
    "build": "src/**/*.*",
    "analyze": "src/components/**/kemet-*.*"
  },
  "scripts": {
    "analyze": "custom-elements-manifest analyze --litelement --globs \"src/components/**/kemet-*.*\"",
    "build": "rimraf dist && npm run build:css && npm run build:ts && npm run build:rollup",
    "build:css": "sass src/styles/kemet.components.scss:dist/styles/kemet.components.css src/styles/kemet.core.scss:dist/styles/kemet.core.css src/styles/kemet.base.scss:dist/styles/kemet.base.css && postcss dist/styles/**/*.css -u autoprefixer --dir dist/styles",
    "build:rollup": "rollup -c rollup.config.mjs",
    "build:ts": "tsc",
    "deploy": "storybook build && node deploy.js",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-pattern .gitignore",
    "format:stylelint": "npx stylelint --fix 'src/styles/**/*.scss' -c stylelint.config.mjs",
    "lint:eslint": "eslint --ext .js,.html . --ignore-pattern .gitignore",
    "lint:stylelint": "npx stylelint 'src/styles/**/*.scss' -c stylelint.config.mjs",
    "prepare": "husky",
    "prepublish": "rimraf dist && npm run build",
    "start": "concurrently npm:storybook npm:watch",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test": "wdio run wdio.conf.js",
    "test:watch": "wdio run wdio.conf.js --watch",
    "watch": "npm-watch",
    "chromatic": "npx chromatic --project-token=chpt_6729a2f8709640a --build-script-name=storybook:build"
  },
  "author": {
    "name": "Hasani Rogers",
    "email": "dev@hasanirogers.me"
  },
  "license": "MIT",
  "keywords": [
    "web components",
    "custom elements",
    "blueprint system"
  ],
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "browserslist": [
    "last 2 versions",
    "iOS >= 8"
  ],
  "dependencies": {
    "@popperjs/core": "^2.11.7",
    "autoprefixer": "^10.4.14",
    "lit": "^3.1.2",
    "mobile-drag-drop": "2.2.0",
    "ts-dedent": "^2.2.0",
    "tslib": "^2.7.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@custom-elements-manifest/analyzer": "^0.10.10",
    "@eslint/js": "^9.37.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-multi-entry": "^7.0.0",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-links": "^9.1.10",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/web-components-vite": "^9.1.10",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "chromatic": "^13.3.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-storybook": "^9.1.10",
    "eslint-plugin-wc": "^3.0.2",
    "husky": "^9.1.7",
    "npm-watch": "^0.13.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-syntax-highlighter": "^5.8.0",
    "remark-gfm": "^4.0.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.4",
    "rollup-plugin-copy": "^3.5.0",
    "sass": "^1.93.2",
    "storybook": "^9.1.10",
    "stylelint": "^16.25.0",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-config-standard": "^39.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hasanirogers/kemet-ui.git"
  },
  "bugs": {
    "url": "https://github.com/hasanirogers/kemet-ui/issues"
  },
  "homepage": "https://kemet.dev",
  "customElements": "custom-elements.json"
}
