{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "useDefineForClassFields": false,
    "noEmitOnError": true,
    "lib": ["es2022", "dom"],
    "strict": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "incremental": false,
    "resolveJsonModule": true,
    "types": ["react", "react-dom", "vite/client"],
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "types/global.d.ts"],
  "exclude": ["node_modules", "sandboxes", "./src/stories/**/*"]
}
